{
  "version": 2,
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/server.ts"
    }
  ],
  "env": {
    "DATABASE_URL": "postgresql://postgres:1234@localhost:5432/book_listing?schema=public"
  },
  "build": {
    "functions": {
      "src/**/*.ts": {
        "includeFiles": "src/**/*.ts"
      },
      "command": "yarn install && yarn build && prisma generate"
    }
  }
}
